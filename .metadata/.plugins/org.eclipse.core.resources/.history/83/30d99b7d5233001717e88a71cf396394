package de.tuberlin.snet.prog2.ue03.watchtxt;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

/**
 * 
 * Program execution instructions
 * 
 * @author Jakob Feldmann
 *
 */
public class ReadTxt {
	public static void main(String[] args) {
		
		File read = new File("Read.txt");
		
		FileWriter writer = null;
	   
		try {
	        writer = new FileWriter(read);
	        writer.write("test");
	    
		} catch (IOException e) {
	        
			e.printStackTrace(); // I'd rather declare method with throws IOException and omit this catch.
	    } 
		
		System.out.printf("File is located at %s%n", read.getAbsolutePath());
		
		ReadTextThread rtt = new ReadTextThread(read);
		
		rtt.start();
	
		try {
			Thread.sleep(30000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
		rtt.interrupt();
		
	}
}
